{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% block title %}
    {{ parent() ~ ' - ' ~ "home" | trans({}, "platform") | striptags | raw }}
{% endblock %}

{% block section_content %}
    <div id="desktop-home-panel" ng-app="DesktopHomeModule">
        <div class="panel-body" ui-view>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        debug=false
        filter='less, cssmin'
        output='css/clarolinecore/hometabs.css'
        "@ClarolineCoreBundle/Resources/less/home-tabs.less"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" screen="media"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-core-desktop-home.js') }}"></script>
{% endblock %}
